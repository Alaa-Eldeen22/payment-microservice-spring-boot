# Database
DB_URL=jdbc:postgresql://localhost:5432/payment_service_db
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DRIVER=org.postgresql.Driver

# Spring profile
SPRING_PROFILE=dev

# RabbitMQ (both host/port and full AMQP URL supported)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# RabbitMQ names
RABBITMQ_QUEUE=paymentQueue
RABBITMQ_EXCHANGE=paymentExchange
RABBITMQ_ROUTING_KEY=paymentRoutingKey

# Invoice Events Configuration
INVOICE_EXCHANGE=invoice_events
INVOICE_QUEUE=invoice_events
INVOICE_ROUTING_KEY=invoice.created